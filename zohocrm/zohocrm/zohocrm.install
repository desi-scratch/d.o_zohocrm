  $schema['zohocrm_mapping_fields'] = array(
    'description' => 'Stores details of fields defined for each of the mappings.',
    'fields' => array(
      'mfid' => array(
        'type' => 'serial',
        'unsigned' => TRUE,
        'not null' => TRUE,
        'description' => 'Unique ID, defined by the database.',
        'no export' => TRUE,
      ),
      'mapping_name' => array(
        'type' => 'varchar',
        'length' => '64',
        'default' => '',
        'not null' => TRUE,
        'description' => 'Name of the mapping.',
      ),
      'src' => array(
        'type' => 'varchar',
        'length' => '64',
        'default' => '',
        'not null' => TRUE,
        'description' => 'Name of the source field.',
      ),
      'dst' => array(
        'type' => 'varchar',
        'length' => '64',
        'default' => '',
        'not null' => TRUE,
        'description' => 'Name of the destination field.',
      ),
      'default_value' => array(
        'type' => 'varchar',
        'length' => '255',
        'default' => '',
        'not null' => TRUE,
        'description' => 'Value used if source field is empty.',
      ),
      'sync_direction' => array(
        'type' => 'int',
        'default' => 0,
        'not null' => TRUE,
        'size' => 'tiny',
